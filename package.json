{
  "name": "mcp-adventure",
  "version": "1.0.0",
  "description": "LLM Adventure Game",
  "main": "dist/main/main.js",
  "homepage": "./",
  "scripts": {
    "build:main": "tsc",
    "build:renderer": "webpack --config webpack.config.js",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "start": "npm run build && electron .",
    "clean": "rimraf dist",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "faiss-node": "^0.5.1",
    "js-yaml": "^4.1.0",
    "node-abi": "^4.9.0",
    "openai": "^4.95.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.1",
    "zod": "^3.25.46",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/cors": "^2.8.17",
    "@types/electron": "^1.4.38",
    "@types/express": "^4.17.17",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.57",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.2",
    "css-loader": "^7.1.2",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "html-webpack-plugin": "^5.6.3",
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.10",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.example.mcp-adventure",
    "productName": "MCP Adventure",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "prompts/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "prompts",
        "to": "prompts"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/electron",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"],
    "declaration": false,
    "noEmit": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "electron/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}
